.container {
    display:flex;
    width: 100%;
    height: 100%;
    align-items: flex-start;
    flex-direction: row;
}


.left-container {
    height: 100%;
    width: 20%;
    background: #f5f5f5;
}


.left-item {
    height: 110rpx;
    width: 100%;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
    font-size: 31rpx;
}

.active {
    color: #000000;
    background: #fff;
    border-left: 10rpx solid #FF6200;
    color: #FF6200;
}

.right-container {
    width: 80%;
    height: 100%;
    display: flex;
    flex-direction: column;
    font-size: 28rpx;
    color: rgb(117, 117, 117);
    background-color: white;
}


.right-container-top image {
    height: 320rpx;
    width: 570rpx;
    border-radius: 10rpx;
    margin-top: 40rpx;
    margin-left: 16rpx;
}

.right-container-body image {
    height: 150rpx;
    width: 150rpx;
    border-radius: 60rpx;
}

.right-container-body {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-top: 35rpx;
    width: 100%;
    margin-left: 10rpx;
}

.right-container-item {
    margin: 0 22rpx;
    width: 150rpx;
    height: 220rpx;
    text-align: center;
}

.right-container-text {
    margin-top: 5rpx;
}